#!/bin/bash

usage() {
    echo "Usage: monitor-ctl (enable | disable)"
}

if [[ -z $1 ]]; then
    usage
    exit 0
fi

case "$1" in
    "enable")
        xrandr --output HDMI-1 --right-of eDP-1 --auto --primary
        ;;
    "disable")
        xrandr --output HDMI-1 --off
        ;;
    *)
        usage >&2
        exit 1
esac
