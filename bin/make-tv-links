#!/usr/bin/env python3
from pathlib import Path
import sys
from typing import Dict
import re

def main():
    here = Path(".")
    series = None
    links: Dict[Path, Path] = {}
    episode_regex = re.compile(r".*S(?P<series>\d+)E(?P<episode>\d+).*")
    for episode in here.iterdir():
        match = episode_regex.match(episode.name)
        if not match:
            continue

        s = match.group("series")
        ep = match.group("episode")

        if series is None:
            series = s
        if s != series:
            print(
                f"multiple series found ({series} and {s}) - aborting",
                file=sys.stderr
            )
            return

        links[here / str(ep)] = episode

    for src, dest in links.items():
        src.symlink_to(dest)

if __name__ == "__main__":
    main()
